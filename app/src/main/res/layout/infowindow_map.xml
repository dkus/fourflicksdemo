<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/infoWindow"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameLabel"
        android:text="@string/name"
        android:layout_marginTop="8dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:textSize="12sp"
        android:paddingRight="5dp"
        android:maxWidth="180dp"
        android:layout_toEndOf="@id/nameLabel"
        android:layout_toRightOf="@id/nameLabel"
        android:layout_alignBottom="@id/nameLabel"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addressLabel"
        android:text="@string/address"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="8dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_below="@id/nameLabel"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/address"
        android:textSize="12sp"
        android:maxWidth="180dp"
        android:paddingRight="5dp"
        android:layout_toEndOf="@id/addressLabel"
        android:layout_toRightOf="@id/addressLabel"
        android:layout_alignBottom="@id/addressLabel"/>

</RelativeLayout>